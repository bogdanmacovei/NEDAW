@model NEDAW.Models.News

<div class="col-md-6">
    <div class="post post-thumb">
        <a class="post-img" href="/News/Edit/@Model.Id"><img src="@Model.Image" alt=""></a>
        <div class="post-body">
            <div class="post-meta">
                <a class="post-category cat-2" href="#">@Model.NewsCategory.Name</a>
                <span class="post-date">@Model.ModifiedOn</span>
            </div>
            <h3 class="post-title"><a href="/News/Edit/@Model.Id">@Model.Content</a></h3>
        </div>
    </div>
</div>